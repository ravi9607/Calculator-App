    <TextView
        android:id="@+id/tvInput"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#ffffff"
        android:maxLength="14"
        android:textColor="@color/black"
        android:textStyle="normal"
        android:padding="10dp"
        android:gravity="right|center_vertical|bottom"
        android:textSize="40sp"
        tools:ignore="RtlHardcoded" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Seven"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:onClick="onDigit"
            android:text="7"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button

            android:id="@+id/Eight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:onClick="onDigit"
            android:text="8"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/Nine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:onClick="onDigit"
            android:text="9"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/Divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:onClick="onOperator"
            android:text="/"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:onClick="onDigit"
            android:text="4"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button

            android:id="@+id/Five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:onClick="onDigit"
            android:text="5"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/Six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:onClick="onDigit"
            android:text="6"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/Multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:text="*"
            android:textSize="30sp"
            android:onClick="onOperator"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:onClick="onDigit"
        android:orientation="horizontal">

        <Button
            android:id="@+id/One"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:onClick="onDigit"
            android:text="1"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button

            android:id="@+id/Two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:onClick="onDigit"
            android:backgroundTint="#555252"
            android:text="2"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/Three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:onClick="onDigit"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:text="3"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/Subtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:backgroundTint="#555252"
            android:text="-"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:onClick="onDecimalPoint"
            android:text="."
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button

            android:id="@+id/Zero"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:onClick="onDigit"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:text="0"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/Clr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:onClick="onClear"
            android:backgroundTint="#555252"
            android:text="CLR"
            android:textSize="23sp"
            tools:ignore="Suspicious0dp" />

        <Button
            android:id="@+id/Add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:backgroundTint="#555252"
            android:text="+"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#555252"
            android:text="="
            android:onClick="onEqual"
            android:textSize="30sp"
            tools:ignore="Suspicious0dp" />


    </LinearLayout>




</LinearLayout>